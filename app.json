{
    "id": "net.schotanus.better-hue",
    "name": {
        "en": "Better Hue"
    },
    "version": "1.0.0",
    "compatibility": "0.x || 1.x",
    "author": {
        "name": "Danny Schotanus",
        "email": "dannzak@gmail.com"
    },
    "contributors": {
        "developers": [
            {
                "name": "Remi de Groot",
                "email": "rdg94@live.nl"
            },
            {
                "name": "Rocodamelshe",
                "email": "rob@schotanus.net"
            }
        ]
    },
    "description": {
        "en": "More functionality for use in flows in combination with Philips Hue Lights",
        "nl": "Meer functionaliteit voor gebruik in flows in combinatie met Philips Hue Lichten"
    },
   "images":{
      "large":"./assets/images/large.jpg",
      "small":"./assets/images/small.jpg"
   },
    "permissions": [],
    "category": "lights",
    "flow": {
        "actions": [
            {
                "id": "activate_hue_scene",
                "title": {
                    "en": "Activate specific Hue Scene",
                    "nl": "Activeer een Hue Scene"
                },
                "args": [
                    {
                        "name": "scene",
                        "type": "autocomplete",
                        "placeholder": {
                            "nl": "Naam van de scene", 
                            "en": "Name of your scene"
                        }
                    }
                ]
            },
            {
                "id": "enable_group",
                "title": {
                    "en": "Activate lights in group",
                    "nl": "Activeer lichten in groep"
                },
                "args": [
                    {
                        "name": "group",
                        "type": "autocomplete",
                        "placeholder": {
                            "nl": "Kies een groep", 
                            "en": "Choose a group"
                        }
                    },
                    {
                        "name": "time",
                        "type": "number",
                        "min": 0,
                        "placeholder": {
                            "nl": "Duur in seconden", 
                            "en": "Duration in seconds"
                        }
                    },
                    {
                        "name": "brightness",
                        "type": "range",
                        "min": 0,
                        "max": 100,
                        "step": 10,
                        "label": "%",
                        "labelMultiplier": 0,
                        "labelDecimals": 0
                    }
                ]
            },
            {
                "id": "disable_group",
                "title": {
                    "en": "Deactivate lights in group",
                    "nl": "Deactiveer lichten in groep"
                },
                "args": [
                    {
                        "name": "group",
                        "type": "autocomplete",
                        "placeholder": {
                            "nl": "Kies een groep", 
                            "en": "Choose a group"
                        }
                    },
                    {
                        "name": "time",
                        "type": "number",
                        "min": 0,
                        "placeholder": {
                            "nl": "Duur in seconden", 
                            "en": "Duration in seconds"
                        }
                    }
                ]
            },
            {
                "id": "enable_color_loop",
                "title": {
                    "en": "Activate colorloop",
                    "nl": "Activeer colorloop"
                },
                "args": [
                    {
                        "name": "group",
                        "type": "autocomplete",
                        "placeholder": {
                            "nl": "Kies een groep", 
                            "en": "Choose a group"
                        }
                    }
                ]
            },
            {
                "id": "blink_once",
                "title": {
                    "en": "Blink the lights once",
                    "nl": "Knipper eenmaal"
                },
                "args": [
                    {
                        "name": "group",
                        "type": "autocomplete",
                        "placeholder": {
                            "nl": "Kies een groep", 
                            "en": "Choose a group"
                        }
                    }
                ]
            },
            {
                "id": "blink_multiple",
                "title": {
                    "en": "Blink the lights for 15 seconds",
                    "nl": "Knipper 15 seconden"
                },
                "args": [
                    {
                        "name": "group",
                        "type": "autocomplete",
                        "placeholder": {
                            "nl": "Kies een groep", 
                            "en": "Choose a group"
                        }
                    }
                ]
            },
            {
                "id": "deactivate_hue_scene",
                "title": {
                    "en": "Deactivate specific Hue Scene",
                    "nl": "Deactiveer een Hue Scene"
                },
                "args": [
                    {
                        "name": "scene",
                        "type": "autocomplete",
                        "placeholder": {
                            "nl": "Naam van de scene", 
                            "en": "Name of your scene"
                        }
                    }
                ]
            },
            {
                "id": "disable_color_loop",
                "title": {
                    "en": "Deactivate colorloop",
                    "nl": "Stop de colorloop"
                },
                "args": [
                    {
                        "name": "group",
                        "type": "autocomplete",
                        "placeholder": {
                            "nl": "Kies een groep", 
                            "en": "Choose a group"
                        }
                    }
                ]
            }
        ]
    }
}